<div class="inner">
{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}
	<article class="{{post_class}}">
		<header class="post-header">
			{{#if tags}}
			<div class="tag-links">
				{{tags}}
			</div>
			{{/if}}
			<div class="post-header-wrap">
			<h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
				<div class="post-meta">
					{{#if author.image}}<img class="author-avatar" src="{{author.image}}" alt="{{author.name}}" />{{/if}} <span class="post-author">by {{author}}</span> <time class="published" datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM DD, YYYY"}}</time>
				</div><!-- .post-meta -->
			</div><!-- .post-header-wrap -->
		</header><!-- .post-header -->
		<div class="post-content">
			<p>{{excerpt}}&hellip;</p>
			<div class="read-more">
				<a class="button" href="{{url}}" title="{{title}}">Read More<span aria-hidden="true"><span class="line left"></span><span class="line top"></span><span class="line right"></span><span class="line bottom"></span></span></a>
			</div>
		</div><!-- .post-content -->
	</article>
{{/foreach}}
</div><!-- .inner -->

{{! Previous/next page links - displayed on every page }}
{{pagination}}
