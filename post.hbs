{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! Everything inside the #post tags pulls data from the post }}
{{#post}}

<main class="site-main">
	<div class="site-content">

		<article class="{{post_class}}">			
			<header class="cover post-header">
				{{#if image}}
				<div class="cover-bg" style="background-image: url({{image}})"></div>
				{{/if}}
				<div class="cover-content">
					<div class="inner">
						{{#if tags}}
						<div class="tag-links">
							{{tags}}
						</div><!-- .tag-links -->
						{{/if}}
						<h1 class="post-title">{{title}}</h1>
						<div class="post-meta">
							<span class="post-meta-wrap">{{#if author.image}}<img class="author-avatar" src="{{author.image}}" alt="{{author.name}}" />{{/if}} <span class="post-author">{{author}}</span> <time class="published" datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM DD, YYYY"}}</time></span> <span class="reading-time">Read in <span class="eta"></span></span>
						</div><!-- .post-meta -->
						<a href="#" class="arrow-down"><span class="screen-reader-text">Scroll Down</span></a>
					</div><!-- .inner -->
				</div><!-- .cover-content -->
			</header><!-- .cover -->
			<div class="inner">
				<div class="post-content">
					{{content}}
				</div><!-- .post-content -->
				<footer class="post-footer share-post">
					<span>Share:</span>
					<a class="icon-twitter circle" target="_blank" href="http://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}"><span class="screen-reader-text">Twitter</span></a>
					<a class="icon-facebook circle" target="_blank" href="http://wwww.facebook.com/sharer.php?u={{url absolute="true"}}"><span class="screen-reader-text">Facebook</span></a>
					<a class="icon-google circle" target="_blank" href="http://plus.google.com/share?url={{url absolute="true"}}"><span class="screen-reader-text">Google+</span></a>
				</footer><!-- .post-footer -->
			</div><!-- .inner -->
		</article>

		{{! The tag below includes the theme comments - partials/comments.hbs }}
		{{> comments}}

		{{! Previous/next post links }}
		<nav class="post-navigation">
			<h2 class="screen-reader-text">Post navigation</h2>
			{{#next_post}}
			<a href="{{url}}" class="nav-next">
				{{#if image}}
				<div class="nav-bg" style="background-image: url({{image}})"></div>
				{{/if}}
				<div class="nav-inside">
					<span class="nav-before">Next</span><span class="nav-title">{{title}}</span><span class="nav-date">{{date format="MMMM DD, YYYY"}}</span>
				</div>
			</a>
			{{/next_post}}
			{{#prev_post}}
			<a href="{{url}}" class="nav-previous">
				{{#if image}}
				<div class="nav-bg" style="background-image: url({{image}})"></div>
				{{/if}}
				<div class="nav-inside">
					<span class="nav-before">Previous</span><span class="nav-title">{{title}}</span><span class="nav-date">{{date format="MMMM DD, YYYY"}}</span>
				</div>			
			</a>
			{{/prev_post}}
		</nav><!-- .post-navigation -->

	</div><!-- .site-content -->
</main><!-- .site-main -->
{{/post}}
