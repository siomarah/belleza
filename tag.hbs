{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The main content area on the tag page }}
<main class="site-main">
	<section class="site-content">
	
		<header class="cover page-header">
			{{#if tag.image}}
			<div class="cover-bg" style="background-image: url({{tag.image}})"></div>
			{{/if}}
			<div class="cover-content">
				<div class="inner">
					<div class="post-count">{{plural pagination.total empty='No posts' singular='% Post' plural='% Posts'}}</div>
					<h1 class="page-title">All posts tagged <span class="highlight">{{tag.name}}</span></h1>
					{{#if tag.description}}
					<p class="page-description">{{tag.description}}</p>
					{{/if}}
				</div><!-- .inner -->
			</div><!-- .cover-content -->
		</header><!-- .cover -->

		{{! The tag below includes the post loop - partials/loop.hbs }}
		{{> "loop"}}

	</section><!-- .site-content -->
</main><!-- .site-main -->
